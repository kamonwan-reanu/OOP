import java.util.Scanner;

public class MathHomeworkSolution {
    
    public static void main(String[] args) {
        
        Scanner inputReader = new Scanner(System.in);
        int N_count = 0; 

        System.out.print("Please input N (the number of integers): ");
        
        
        N_count = inputReader.nextInt();
       
        inputReader.nextLine();
        
        if (N_count <= 0) {
            System.out.println("N must be greater than zero. Terminating.");
            return;
        }

        int[] dataList = new int[N_count];
        
        long totalSum = 0; 
        
        int currentIndex = 0; 
        System.out.println("--- Starting data entry for " + N_count + " values ---");
        
        while (currentIndex < N_count) {
            
    
            System.out.printf("Value [%d/%d]: ", currentIndex + 1, N_count);
            
            int inputVal = inputReader.nextInt(); 
            inputReader.nextLine(); 

            dataList[currentIndex] = inputVal;
            totalSum += inputVal;
            
            currentIndex++; 
        }

        
        double finalAvg  =  (double)totalSum / N_count;

        System.out.println("\n=======================");
        System.out.println("Calculation Summary:");
        System.out.println("Total elements processed: " + N_count);
        System.out.println("Accumulated Sum: " + totalSum);
        
        System.out.printf("The Final Average is: %.1f\n", finalAvg);
        System.out.println("=======================");
        
        inputReader.close(); 
    }
}
