import java.util.Scanner;

public class CustomArrayStats {

    public static void main(String[] args) {
        // ใช้ System.in โดยตรง ไม่ต้องสร้าง Scanner ใหม่หลายครั้ง
        Scanner inputReader = new Scanner(System.in); 

        // 1. รับค่า N (จำนวนของตัวเลข)
        int inputCount; 
        System.out.print("Enter the count of numbers (N): ");
        inputCount = inputReader.nextInt();

        // Basic validation: must be a positive count
        if (inputCount <= 0) {
            System.out.println("Error: N must be a positive integer.");
            inputReader.close();
            return;
        }

        // 2. สร้าง Array เพื่อเก็บตัวเลขตามจำนวนที่กำหนด
        int[] rawValues = new int[inputCount]; 
        
        System.out.println("\nReady to receive " + inputCount + " values:");
        
        // 3. First Pass: รับค่าทั้งหมดใส่ใน Array
        for (int i = 0; i < inputCount; i++) {
            System.out.print("Value " + (i + 1) + ": ");
            // เก็บค่าเข้า Array
            rawValues[i] = inputReader.nextInt();
        }

        // 4. Second Pass: วนลูปเพื่อคำนวณผลรวม
        // Using 'long' for safety, in case the sum exceeds 2 billion
        long totalAccumulator = 0; 

        for (int value : rawValues) {
            totalAccumulator += value;
        }

        // 5. คำนวณค่าเฉลี่ย
        // Casting is necessary to get a floating-point result for the average calculation.
        double computedAverage = (double) totalAccumulator / inputCount;

        // 6. แสดงผลลัพธ์: ใช้ printf เพื่อควบคุม format ให้แสดงทศนิยม 1 ตำแหน่ง
        System.out.println("---");
        System.out.println("Total Sum: " + totalAccumulator);
        System.out.printf("Average (as per requirement): %.1f%n", computedAverage);

        inputReader.close();
    }
}
